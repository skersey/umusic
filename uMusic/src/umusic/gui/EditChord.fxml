<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="editChordWindow"  prefHeight="250.0" prefWidth="250.0" fx:controller="umusic.gui.EditChordController">
    <HBox AnchorPane.topAnchor="5.0" AnchorPane.leftAnchor="25.0">
	    <VBox minWidth="200" >
		<Label text="Note Duration"/>
	        <fx:define>
                    <ToggleGroup fx:id="durationGroup"/>
                </fx:define>
                <fx:define>
                    <ToggleGroup fx:id="sharpFlatGroup"/>
                </fx:define>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/note-whole.png"/>
                        </image>
                    </ImageView>
    
                    <RadioButton text="whole" selected="true" toggleGroup="$durationGroup"/>
                </HBox>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/note-half.png"/>
                        </image>
                    </ImageView>
    
                    <RadioButton  text="half" toggleGroup="$durationGroup"/>
    
                </HBox>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/note-quarter.png"/>
                        </image>
                    </ImageView>
    
                    <RadioButton  text="quarter" toggleGroup="$durationGroup"/>
    
                </HBox>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15">
                        <image>
                            <Image url="@img/note-eighth.png"/>
                        </image>
                    </ImageView>
    
                    <RadioButton  text="eighth" toggleGroup="$durationGroup"/>
    
                </HBox>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/note-sixteenth.png"/>
                        </image>
                    </ImageView>
                    <RadioButton  text="sixteenth" toggleGroup="$durationGroup"/>
                </HBox>
		<HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/mod-dotted.png"/>
                        </image>
                    </ImageView>
                    <CheckBox text="dotted" fx:id="mteDotted"/>
                </HBox>
                <HBox>
                    <ImageView fitHeight="15" fitWidth="15"  >
                        <image>
                            <Image url="@img/mod-rest.png"/>
                        </image>
                    </ImageView>
                    <CheckBox text="rest" fx:id="mteRest"/>
                </HBox>
                <HBox spacing="5">
                    <RadioButton selected="true" text="sharp" toggleGroup="$sharpFlatGroup"/>
                    <RadioButton text="flat" toggleGroup="$sharpFlatGroup"/>
                </HBox>
            </VBox>
            <VBox minWidth="150" >
                <Label text="Inversions"/>
                <fx:define>
                    <ToggleGroup fx:id="inversionGroup" />
                </fx:define>
                <RadioButton selected="true" text="0" toggleGroup="$inversionGroup"/>
                <RadioButton                 text="1" toggleGroup="$inversionGroup"/>
                <RadioButton                 text="2" toggleGroup="$inversionGroup"/>
                <Label text=""/>
            </VBox>
        </HBox>
	<HBox AnchorPane.topAnchor="175.0" AnchorPane.leftAnchor="15.0" spacing="20">
            <VBox>
                <Label text="Note"/>
		<fx:include fx:id="mteNote" source="choicebox/Notes.fxml"/>		
            </VBox>
            <VBox>
                <Label text="Octave"/>
                <fx:include fx:id="mteOctave" source="choicebox/Octave.fxml"/>    
            </VBox>
            <VBox>
                <Label text="Chords"/>
                <fx:include fx:id="mteChord" source="choicebox/Chords.fxml"/>
            </VBox>
        </HBox>
	<HBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="75.0" spacing="20">
            <Button text="Cancel" fx:id="closeButton" onAction="#closeButtonAction"/>
            <Button text="Edit Note" fx:id="editNote" onAction="#editNoteAction"/>
        </HBox>
</AnchorPane>
